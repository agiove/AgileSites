<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?>
<installation version="1.0">
    <info>
        <appname>AgileSites</appname>
        <appversion>2.0</appversion>
        <appsubpath>Sciabarra.com/Agilesites2.0</appsubpath>
        <authors>
            <author email="michele@sciabarra.com" name="Michele Sciabarra"/>
        </authors>
        <url>http://www.agilesites.org</url>
        <uninstaller name="Uninstaller.jar" write="yes"/>
        <javaversion>1.7.0_06</javaversion>
        <requiresjdk>yes</requiresjdk>
        <writeinstallationinformation>yes</writeinstallationinformation>
        <pack200/>
    </info>
    <guiprefs height="480" resizable="no" width="640">
        <modifier key="useFlags" value="yes"/>
        <modifier key="langDisplayType" value="default"/>
    </guiprefs>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res id="LicencePanel.licence" parse="yes" src="A:\agilesites\2.0\sites\izpack\Licence.txt"/>
        <res id="shortcutSpec.xml" src="setup_shortcutSpec.xml"/>
        <res id="Unix_shortcutSpec.xml" src="setup_Unix_shortcutSpec.xml"/>
        <res id="installer.langsel.img" src="A:\agilesites\2.0\sites\izpack\setup_splash.png"/>
        <res id="Installer.image" src="A:\agilesites\2.0\sites\izpack\setup_side.png"/>
        <res id="userInputSpec.xml" src="setup_userInputSpec.xml"/>
        <res id="ProcessPanel.Spec.xml" src="setup_processPanelSpec.xml"/>
    </resources>
    <panels>
        <panel classname="CheckedHelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="UserInputPanel"/>
        <panel classname="ProcessPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <packs>
        <pack name="Sites" preselected="yes" required="yes">
            <description/>
            <file override="true" src="A:\agilesites\2.0\sites\bin" targetdir="$INSTALL_PATH"/>
            <file override="true" src="A:\agilesites\2.0\sites\shared" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\webapps" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\setup.cmd" targetdir="$INSTALL_PATH/">
                <os family="Windows"/>
            </file>
            <file override="update"
                src="A:\agilesites\2.0\sites\setup1.cmd" targetdir="$INSTALL_PATH/">
                <os family="Windows"/>
            </file>
            <file override="true"
                src="A:\agilesites\2.0\sites\download.cmd" targetdir="$INSTALL_PATH/">
                <os family="Windows"/>
            </file>
            <file override="update"
                src="A:\agilesites\2.0\sites\mksbt.cmd" targetdir="$INSTALL_PATH/">
                <os family="Windows"/>
            </file>
            <file override="update" src="A:\agilesites\2.0\sites\repo" targetdir="$INSTALL_PATH/"/>
            <file override="update" src="A:\agilesites\2.0\sites\home" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\build.sbt" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\project\build.properties" targetdir="$INSTALL_PATH/project"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\project\plugins.sbt" targetdir="$INSTALL_PATH/project"/>
            <file override="update"
                src="A:\agilesites\2.0\sites\context.xml" targetdir="$INSTALL_PATH/"/>
        </pack>
    </packs>
    <native name="ShellLink.dll" type="izpack"/>
    <native name="ShellLink_x64.dll" type="izpack"/>
</installation>
